{
	"mcpServers": {
		"task-master-ai": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"task-master-ai"
			]
		},
		"github": {
			"transport": "http",
			"url": "https://api.githubcopilot.com/mcp",
			"headers": {
				"Authorization": "Bearer ${GITHUB_TOKEN}"
			}
		},
		"gitlab-mcp": {
			"command": "gitlab-mcp"
		},
		"perplexity-ai": {
			"command": "pplx",
			"args": ["mcp-stdio"]
		},
		"context7": {
			"transport": "http",
			"url": "https://mcp.context7.com/mcp",
			"headers": {
				"CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
			}
		}
	}
}
