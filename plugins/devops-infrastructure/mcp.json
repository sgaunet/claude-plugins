{
	"mcpServers": {
		"task-master-ai": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"task-master-ai"
			]
		},
		"github": {
			"transport": "http",
			"url": "https://api.githubcopilot.com/mcp",
			"headers": {
				"Authorization": "Bearer ${GITHUB_TOKEN}"
			}
		},
		"gitlab-mcp": {
			"command": "gitlab-mcp"
		}
	}
}
